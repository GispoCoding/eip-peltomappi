{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "name of the project in the Mergin Maps server"
    },
    "fieldParcelIds": {
      "type": "array",
      "description": "list of the field parcel IDs included in this project",
      "minItems": 1,
      "items": {
        "minLength": 10,
        "maxLength": 10,
        "type": "string"
      },
      "uniqueItems": true
    }
  },
  "required": [
    "name",
    "fieldParcelIds"
  ]
}
