{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "compositionName": {
      "type": "string",
      "description": "name of the composition"
    },
    "compositionId": {
      "type": "string",
      "format": "uuid",
      "description": "unique identifier of the composition"
    },
    "merginWorkspace": {
      "type": "string",
      "description": "name of the workspace the project belongs to in the Mergin Maps Server"
    },
    "merginServer": {
      "type": "string",
      "format": "uri",
      "description": "URL of the Mergin Maps server being used"
    },
    "templateProjectPath": {
      "type": "string",
      "description": "path containing the template project this subproject was created from"
    },
    "subprojects": {
      "type": "array",
      "description": "list of subprojects",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "unique identifier of the subproject"
          },
          "name": {
            "type": "string",
            "description": "name of the project in the Mergin Maps server"
          },
          "path": {
            "type": "string",
            "description": "path to the local folder containing the subproject"
          },
          "fieldParcelIds": {
            "type": "array",
            "description": "list of the field parcel IDs included in this project",
            "minItems": 1,
            "items": {
              "minLength": 10,
              "maxLength": 10,
              "type": "string"
            },
            "uniqueItems": true
          },
          "created": {
            "type": "string",
            "format": "date-time",
            "description": "timestamp of when subproject was created"
          },
          "modified": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "modificationType": {
                  "enum": [
                    "projectUpdate",
                    "weatherUpdate"
                  ],
                  "type": "string",
                  "description": "type of modification action"
                },
                "datetime": {
                  "type": "string",
                  "format": "date-time",
                  "description": "when modification occured"
                }
              },
              "required": [
                "modificationType",
                "datetime"
              ]
            },
            "uniqueItems": true
          }
        },
        "required": [
          "id",
          "name",
          "path",
          "fieldParcelIds",
          "created"
        ]
      }
    }
  },
  "required": [
    "compositionId",
    "merginWorkspace",
    "merginServer",
    "templateProjectPath",
    "subprojects"
  ]
}
