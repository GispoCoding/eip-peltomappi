{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "compositionName": {
      "type": "string",
      "description": "name of the composition"
    },
    "compositionId": {
      "type": "string",
      "format": "uuid",
      "description": "unique identifier of the composition"
    },
    "merginWorkspace": {
      "type": "string",
      "description": "name of the workspace the project belongs to in the Mergin Maps Server"
    },
    "merginServer": {
      "type": "string",
      "format": "uri",
      "description": "URL of the Mergin Maps server being used"
    },
    "templateProjectPath": {
      "type": "string",
      "description": "path containing the template project this subproject was created from"
    },
    "subprojects": {
      "type": "array",
      "description": "list of subprojects",
      "items": {
        "type": "string",
        "description": "URI of the subproject json"
      }
    }
  },
  "required": [
    "compositionId",
    "merginWorkspace",
    "merginServer",
    "templateProjectPath",
    "subprojects"
  ]
}
