{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "compositionName": {
      "type": "string",
      "description": "name of the composition"
    },
    "compositionId": {
      "type": "string",
      "format": "uuid",
      "description": "unique identifier of the composition"
    },
    "merginWorkspace": {
      "type": "string",
      "description": "name of the workspace the composition exists in, as well as the template project and subprojects"
    },
    "merginServer": {
      "type": "string",
      "format": "uri",
      "description": "URL of the Mergin Maps server being used"
    },
    "templateName": {
      "type": "string",
      "description": "name of the template project in the Mergin Maps Server"
    },
    "subprojects": {
      "type": "array",
      "description": "list of subprojects",
      "items": {
        "type": "string",
        "description": "name of the subproject"
      }
    }
  },
  "required": [
    "compositionName",
    "compositionId",
    "merginWorkspace",
    "merginServer",
    "templateName",
    "subprojects"
  ]
}
